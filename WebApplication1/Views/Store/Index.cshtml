@model IEnumerable<WebApplication1.Data.Product>

@{
    ViewData["Title"] = "Index";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="">



    <!-- CSS FILES -->
    <link rel="preconnect" href="https://fonts.googleapis.com">

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700;900&display=swap" rel="stylesheet">

    <link href="/lib/template2/css/bootstrap.min.css" rel="stylesheet">
    <link href="/lib/template2/css/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="/lib/template2/css/slick.css" />
    @*
    <link href="/lib/template2/css/tooplate-little-fashion.css" rel="stylesheet"> *@

    <link rel="stylesheet" href="~/lib/fontawesome-free-6.0.0-web/css/all.css" />
    <link href="/css/fptbook.css" rel="stylesheet" type="text/css" media="all" />
    <!--

