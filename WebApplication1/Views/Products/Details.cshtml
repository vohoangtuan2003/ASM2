<body>

    <section class="preloader">
        <div class="spinner">
            <span class="sk-inner-circle"></span>
        </div>
    </section>

    <main>

        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>



                <div class="d-lg-none">
                    <a href="sign-in.html" class="bi-person custom-icon me-3"></a>

                    <a href="product-detail.html" class="bi-bag custom-icon"></a>
                </div>


            </div>
        </nav>

        <header class="site-header section-padding d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row">

                    <div class="col-lg-10 col-12">
                        <h1>
                            <span class="d-block text-primary">We provide you</span>
                            <span class="d-block text-dark">Books in our store</span>
                        </h1>
                    </div>
                </div>
            </div>
        </header>

        <section class="product-detail section-padding">
            <div class="container">
                <div class="row">

                    <div class="col-lg-6 col-12">
                        <div class="product-thumb">
                            <img src="images/product/evan-mcdougall-qnh1odlqOmk-unsplash.jpeg" class="img-fluid product-image" alt="">
                            <img src="/uploads/@Html.DisplayFor(modelitem => Model.BookImage)" alt="user" style="height: 600px">
                        </div>
                        <hr width="90%" align="center" />
                        <div class="col-lg-10 col-18">
                            <dt class="col-sm-3">
                               
                                Description:
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                        </div>
                    </div>

                    <div class="col-lg-6 col-12">
                        <div class="product-info d-flex">
                            <div>
                                <dt class="col-sm-3">
                                    Name:
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>

                                <P> <dt class="col-sm-3">
                                        @* @Html.DisplayNameFor(model => model.Title) *@
                                    Title:
                                </dt>
                                </P>
                                <p class="product-p">  @Html.DisplayFor(model => model.Title)</p>

                                <P> <dt class="col-sm-3">
                                    Author:
                                </dt>
                                </P>
                                <p class="product-p">  @Html.DisplayFor(model => model.AuthorName)</p>
                                <p class="lead mb-4">
                                @* <dt class="col-sm-3">
                                        
                                    Description:
                                </dt>
                                <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Description)
                                </dd> *@
                                </p>
                                <dt class="col-sm-5">
                                    Price:
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.BookPrice)
                                </dd>
                                <div class="product-cart-thumb row">
                                    @* <div class="col-lg-6 col-12">

                                        <select class="form-select cart-form-select" id="inputGroupSelect01">
                                            <option selected>Quantity</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                    </div> *@

                                    <div>
                                        <a asp-action="Edit" asp-route-id="@Model?.Id" class=" btn btn-primary ">Edit</a> |
                                        <a asp-action="Index" class="btn btn-warning"><i class="fa-solid fa-backward"></i> Back </a>
                                    </div>
                                    <p>
                                        @* <a href="#" class="product-additional-link">Details</a> *@

                                        @* <a href="#" class="product-additional-link">Delivery and Payment</a> *@
                                    </p>
                                </div>
                            </div>

