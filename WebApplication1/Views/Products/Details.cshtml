                            <dt class="col-sm-4">
                            Price
                            </dt>
                            <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.BookPrice )
                            </dd>

                            </small>

                            </div>

                            <div class="product-description">



                            <p class="lead mb-5">
                            <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Description )
                            </dt>
                            <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                            </dd>
                            </p>
                            </div>
