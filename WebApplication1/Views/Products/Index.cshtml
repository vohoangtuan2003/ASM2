@model IEnumerable<WebApplication1.Data.Product>

@{
    ViewData["Title"] = "Index";
}

<body >
    <h1>Books Management</h1>

    <p>
        <a asp-action="Create" class=" btn btn-primary "><i class="fa-regular fa-address-book"></i> Add Book </a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name of the Book
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    Author Of The Book
                </th>
                <th>
                    Price Of The Book
                </th>
                <th>
                    Image Of The Book
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.PublishedYear)
                </th>
                @* <th>
                @Html.DisplayNameFor(model => model.AuthorName)
                </th> *@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookPrice)
                    </td>
                    <td>
                        <img src="/uploads/@Html.DisplayFor(modelitem => item.BookImage)" alt="user" style="height: 300px ">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublishedYear)
                    </td>
                    @* <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
                </td> *@
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary "><i class="fa-solid fa-pen-to-square"></i></a>

                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btnbg-danger"><i class="fa-solid fa-circle-info"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark"> <i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>